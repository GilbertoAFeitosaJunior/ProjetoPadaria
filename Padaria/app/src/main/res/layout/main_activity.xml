<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eedc82"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="150px"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">


            <ImageButton
                android:id="@+id/cliente"
                android:layout_width="300px"
                android:layout_height="300px"
                android:layout_marginTop="20dp"
                android:background="@drawable/cliente_novo"
                android:clickable="true"
                android:longClickable="false"
                android:onClick="MenuPrincipal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/produto"
                android:layout_width="300px"
                android:layout_height="300px"
                android:layout_marginTop="20dp"
                android:background="@drawable/produto_novo"
                android:clickable="true"
                android:onClick="MenuPrincipal" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/pedido"
                android:layout_width="300px"
                android:layout_height="300px"
                android:layout_marginTop="20dp"
                android:background="@drawable/pedido_novo"
                android:clickable="true"
                android:onClick="MenuPrincipal" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|right"
            android:text="By Gilberto Feitosa Jr. V1.01" />

    </LinearLayout>

</LinearLayout>
