<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cd950c"
    android:orientation="vertical">


    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:textColor="#000000"
        android:textSize="35px"
        android:paddingRight="10px"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Codigo:"/>

    <TextView
        android:textColor="#000000"
        android:id="@+id/codigoProdutoContext"
        android:paddingBottom="10px"
        android:paddingTop="20px"
        android:textSize="35px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="001"/>
</LinearLayout>

    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:textColor="#000000"
        android:textSize="35px"
        android:paddingRight="10px"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome:"/>

    <TextView
        android:textColor="#000000"
        android:id="@+id/nomeProdutoContext"
        android:paddingBottom="10px"
        android:paddingTop="20px"
        android:textSize="35px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Feijao"/>

</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="#000000"
            android:textSize="35px"
            android:paddingRight="10px"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descrição:"/>

        <TextView
            android:textColor="#000000"
            android:id="@+id/descriacaoProdutoContext"
            android:paddingBottom="10px"
            android:paddingTop="20px"
            android:textSize="35px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Feijao preto"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="#000000"
            android:textSize="35px"
            android:paddingRight="10px"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantidade:"/>

        <TextView
            android:textColor="#000000"
            android:id="@+id/quatidadeProdutoContext"
            android:paddingBottom="10px"
            android:paddingTop="20px"
            android:textSize="35px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="100"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="#000000"
            android:textSize="35px"
            android:paddingRight="10px"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preço Unidade R$:"/>

        <TextView
            android:textColor="#000000"
            android:id="@+id/valorProdutoContext"
            android:paddingBottom="10px"
            android:paddingTop="20px"
            android:textSize="35px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="100.00"/>

    </LinearLayout>



</LinearLayout>
