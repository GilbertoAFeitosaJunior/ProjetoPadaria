<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#eedc82">


    <LinearLayout
        android:paddingTop="13px"
        android:paddingBottom="13px"
        android:background="#cd950c"
        android:gravity="left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="100px"
            android:layout_height="100px"
            android:background="@drawable/logomarca"/>

        <TextView
            android:paddingTop="20px"
            android:paddingLeft="10px"
            android:paddingRight="10px"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50px"
            android:textStyle="bold"
            android:text="Lista de Produtos"/>

        <ImageView
            android:layout_marginTop="10px"
            android:onClick="menuProduto"
            android:id="@+id/voltar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/voltar"
            />

        <ImageView
            android:layout_marginTop="10px"
            android:onClick="menuProduto"
            android:id="@+id/addProduto"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/add"
            />

    </LinearLayout>

    <EditText
        android:id="@+id/localizarProduto"
        android:layout_margin="10px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Localizar produto"
        />
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/produtoListView" />




    <TextView
        android:layout_marginTop="300px"
        android:layout_gravity="center"
        android:id="@+id/msg_lista_vazia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Nenhum Produto cadastrado."
        android:textSize="20dp" />


</LinearLayout>
